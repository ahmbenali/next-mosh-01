{
  "tailwindCSS.experimental.configFile": "./tailwind.config.ts",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true,
    ".next": true,
    ".vscode": true,
    "public": true,
    ".eslintrc.json": true,
    ".gitignore": true,
    "next-env.d.ts": true,
    "next.config.js": true,
    "package-lock.json": true,
    "package.json": true,
    "postcss.config.js": true,
    "prettier.config.js": true,
    "README.md": true,
    "tailwind.config.ts": true,
    "tsconfig.json": true,
    "archiv": true,
    "app/globals.css": true,
    "app/layout.tsx": true
  },
  "hide-files.files": [
    "node_modules",
    ".next",
    ".vscode",
    "public",
    ".eslintrc.json",
    ".gitignore",
    "next-env.d.ts",
    "next.config.js",
    "package-lock.json",
    "package.json",
    "postcss.config.js",
    "prettier.config.js",
    "README.md",
    "tailwind.config.ts",
    "tsconfig.json",
    "archiv",
    "app/globals.css",
    "app/layout.tsx"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
